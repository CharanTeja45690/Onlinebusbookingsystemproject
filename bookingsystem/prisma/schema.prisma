generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String
  password  String
  role      Role
  createdAt DateTime @default(now())

  bookings Booking[]
  buses    Bus[]     @relation("UserBuses")
  payments Payment[]
}

enum Role {
  USER
  OWNER
}

model Bus {
  id              Int      @id @default(autoincrement())
  name            String
  busNumber       String   @unique
  totalSeats      Int
  availableSeats  Int
  price           Float    @default(0) // Temporary default
  routeId         Int
  driverId        Int
  ownerId         Int?
  route           Route    @relation(fields: [routeId], references: [id])
  driver          Driver   @relation(fields: [driverId], references: [id])
  owner           User?    @relation("UserBuses", fields: [ownerId], references: [id]) 
  bookings        Booking[] 
}

model Booking {
  id        Int      @id @default(autoincrement())
  userId    Int
  busId     Int
  seats     Int
  price     Float    @default(0) // Temporary default
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  bus       Bus      @relation(fields: [busId], references: [id])
  payment   Payment?
}


model Route {
  id          Int      @id @default(autoincrement())
  source      String
  destination String
  date        DateTime
  buses       Bus[]
}

model Driver {
  id        Int    @id @default(autoincrement())
  name      String
  licenseNo String @unique
  buses     Bus[]
}
model Payment {
  id            Int           @id @default(autoincrement())
  bookingId     Int           @unique
  userId        Int
  amount        Float
  paymentMode   PaymentMode
  paymentStatus PaymentStatus
  paymentDate   DateTime      @default(now())
  transactionId String        @unique @default(cuid())

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])
}

enum PaymentMode {
  CREDIT_CARD
  DEBIT_CARD
  UPI
  NET_BANKING
  WALLET
  CASH
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}
